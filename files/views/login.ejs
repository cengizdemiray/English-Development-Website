    <link rel="stylesheet" href="/styles/login.css">
</head>

<body>
  <div class="container" id="login">
    <main class="form-login">
      <form action="/login" method="post" onsubmit="return resetForm()">

        <h1 class="h3 mb-3 fw-normal" style="text-align: center;">Please Login</h1>

        <div class="form-floating" style="margin-bottom: 10px;">
          <input type="text" class="form-control" id="floatingInput" placeholder="Username" name="username" value="<%= rememberMe ? savedUsername: '' %>" required>
          <label for="username">Username</label>
        </div>
        <div class="form-floating">
          <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password" value="<%= rememberMe ? savedPassword: '' %>" required>
          <label for="password">Password</label>
        </div>

        <div class="checkbox mb-3">
          <input type="checkbox" id="rememberMe" name="rememberMe" <% if (rememberMe) { %>checked<% } %>>
    <label for="rememberMe">Remember Me</label>
        </div>
        <button type="submit" class="btn btn-success" style="width: 100%;">Login</button>
        
      </form>
      <% if (errorMessage) { %>
        <p style="color: red;"><%= errorMessage %></p>
    <% } %>
    
      <img src="/images/background2.jpg" alt="Resim BulunamadÄ±" class="image1">
    </main>
  </div>

</html>










